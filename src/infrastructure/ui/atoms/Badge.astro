---
interface Props {
  variant?: 'default' | 'outline' | 'accent';
}

const { variant = 'default' } = Astro.props;

const baseStyles = "inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium font-mono transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2";

const variants = {
  default: "bg-surface text-text-main border border-transparent",
  outline: "text-text-muted border border-border",
  accent: "bg-accent-blue text-black border border-transparent bg-opacity-10 text-accent-blue"
};

const className = [baseStyles, variants[variant]].join(' ');
---

<span class={className}>
  <slot />
</span>
