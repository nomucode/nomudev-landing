---
import type { TechStackCategory } from '../../../../domain/models';
import TechIcon from '../molecules/TechIcon.astro';

interface Props {
  categories: TechStackCategory[];
}

const { categories } = Astro.props;
---

<section class="py-20 border-t border-border">
  <div class="max-w-[var(--spacing-container)] mx-auto px-4 sm:px-6">
    <h2 class="text-3xl font-bold mb-12 font-mono">technical_expertise</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {categories.map(category => (
        <div class="bg-secondary rounded-lg p-6 border border-border hover:border-text-muted transition-colors">
          <h3 class="text-sm font-semibold text-text-muted uppercase tracking-wider mb-6 flex items-center gap-2">
             <span class="w-1 h-4 bg-accent-green rounded-full"></span>
             {category.title}
          </h3>
          
          <ul class="space-y-4">
            {category.items.map(item => (
              <li class="flex items-center gap-3 group">
                <div class="p-2 rounded-md bg-[#1a1a1a] text-accent-blue group-hover:text-accent-green transition-colors">
                  <TechIcon iconName={item.icon} class="w-5 h-5" />
                </div>
                <span class="font-medium text-text-main">{item.name}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
