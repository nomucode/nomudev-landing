---
import type { Project } from '../../../../domain/models';
import ProjectCard from '../molecules/ProjectCard.astro';

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<section id="projects" class="py-20 relative overflow-hidden">
  <div class="max-w-[var(--spacing-container)] mx-auto px-4 sm:px-6 relative z-10">
    <div class="mb-12">
      <h2 class="text-3xl font-bold font-mono inline-block border-b-2 border-accent-blue pb-2 mb-4">
        featured_architecture
      </h2>
      <p class="text-text-muted max-w-2xl">
        Select case studies demonstrating scalability, high-performance computing, and modernization strategies.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <ProjectCard project={project} />
      ))}
    </div>
  </div>

  <!-- Background decorative elements -->
  <div class="absolute bottom-0 left-0 -z-10 opacity-10">
     <div class="w-[600px] h-[600px] rounded-full bg-accent-green blur-[120px]"></div>
  </div>
</section>
