---
import type { Project } from '../../../../domain/models';
import Badge from '../atoms/Badge.astro';
import Button from '../atoms/Button.astro';
import ThreeDCard from './ThreeDCard.astro';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<ThreeDCard class="h-full">
  <article class="h-full group relative overflow-hidden rounded-xl border border-border bg-surface p-6 transition-all hover:border-text-muted">
    <div class="flex flex-col h-full justify-between relative z-10">
      <div>
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-xl font-bold text-text-main font-mono">{project.title}</h3>
          <!-- Decorative subtle icon or graphical element could go here -->
        </div>
        
        <p class="text-text-muted mb-6 leading-relaxed">
          {project.description}
        </p>

        {project.stats && (
          <div class="mb-6 grid grid-cols-2 gap-4 border-l-2 border-accent-blue pl-4">
            {project.stats.map(stat => (
              <div>
                <dt class="text-xs uppercase tracking-wider text-text-muted font-mono">{stat.label}</dt>
                <dd class="text-lg font-bold text-accent-blue">{stat.value}</dd>
              </div>
            ))}
          </div>
        )}
      </div>

      <div>
        <div class="flex flex-wrap gap-2 mb-6">
          {project.techStack.map(tech => (
            <Badge variant="outline">{tech}</Badge>
          ))}
        </div>

        <div class="pt-4 border-t border-border">
           <Button variant="ghost" size="sm" class="group-hover:text-accent-green transition-colors pl-0">
              Read Case Study &rarr;
           </Button>
        </div>
      </div>
    </div>
    
    <!-- Hover Glow Effect -->
    <div class="absolute -inset-px -z-10 rounded-xl bg-gradient-to-r from-accent-blue to-accent-green opacity-0 blur transition duration-500 group-hover:opacity-10" aria-hidden="true"></div>
  </article>
</ThreeDCard>
